<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/box"
    android:layout_margin="4dp">
    <LinearLayout
        android:id="@+id/airfareList_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/airfareList_airlinesLogo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"/>
        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/airfareList_departureTime"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="21:30" />
            <TextView
                android:id="@+id/airfareList_departureIATA"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="CAN" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/airfareList_duration"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="80"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="------------âœˆ"
                android:textColor="@color/TopicColor"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/airfareList_stops"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="12sp"
                tools:text="1 Stop" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/airfareList_ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="35dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/airfareList_arrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="00:30" />
            <TextView
                android:id="@+id/airfareList_arrivalIATA"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="XMN" />
        </LinearLayout>
        <TextView
            android:id="@+id/airfareList_price_delayDay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            tools:text="+1"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/airfareList_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/airfareList_airlineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            tools:text="ShangDong Airlines | 3U 8888"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/airfareList_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="15dp"
            tools:text="1200 RMB"
            android:textSize="15sp"
            android:textColor="@color/airfare_price_color"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
