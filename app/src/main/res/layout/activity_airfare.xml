<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homepage_background"
    tools:context=".Airfare">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/airfare_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_icon"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Homepage"
                android:textColor="@color/TopicColor"
                android:textStyle="bold"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homepage"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/box">
        <TextView
            android:id="@+id/airfare_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Airfare Comparison"
            android:textColor="@color/TopicColor"
            android:textSize="26sp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/airfare_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="Departure"
            android:textColor="@color/TopicColor"/>

        <TextView
            android:id="@+id/airfare_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:text="Arrival"
            android:textColor="@color/TopicColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/airfare_departure_input"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:inputType="text"/>

        <TextView
            android:id="@+id/airfare_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœˆ"
            android:textColor="@color/TopicColor"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/airfare_arrival_input"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:inputType="text"/>
    </LinearLayout>

    <TextView
        android:id="@+id/airfare_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Date"
        android:textColor="@color/TopicColor"/>

    <EditText
        android:id="@+id/airfare_date_input"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="date"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency:"
            android:textColor="@color/TopicColor"/>
        <Spinner
            android:id="@+id/airfare_currency"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:entries="@array/currency" />
    </LinearLayout>

    <Button
        android:id="@+id/airfare_search_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:background="@drawable/airfare_detail_bottom_box"
        android:text="Search Airfare"
        android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>